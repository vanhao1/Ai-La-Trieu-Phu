<?xml version="1.0" encoding="utf-8"?>
<com.example.ailatrieuphu_n10_project.layout.TienThuongLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_money"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player_money_background"
    android:clickable="false">

    <Button
        android:id="@+id/btn_hide"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_hide_bg"
        android:text="Hide"
        android:textAllCaps="false"
        android:textColor="#848484" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="16dp"
        android:paddingRight="50dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_level_15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/player_image_money_milestone"
            android:gravity="center"
            android:text="@string/level15"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_level_14"
            style="@style/txtListCauHoi"
            android:text="@string/level14" />

        <TextView
            android:id="@+id/tv_level_13"
            style="@style/txtListCauHoi"
            android:text="@string/level13" />

        <TextView
            android:id="@+id/tv_level_12"
            style="@style/txtListCauHoi"
            android:text="@string/level12" />

        <TextView
            android:id="@+id/tv_level_11"
            style="@style/txtListCauHoi"
            android:text="@string/level11" />

        <TextView
            android:id="@+id/tv_level_10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/player_image_money_milestone"
            android:gravity="center"
            android:text="@string/level10"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_level_9"
            style="@style/txtListCauHoi"
            android:text="@string/level09" />

        <TextView
            android:id="@+id/tv_level_8"
            style="@style/txtListCauHoi"
            android:text="@string/level08" />

        <TextView
            android:id="@+id/tv_level_7"
            style="@style/txtListCauHoi"
            android:text="@string/level07" />

        <TextView
            android:id="@+id/tv_level_6"
            style="@style/txtListCauHoi"
            android:text="@string/level06" />

        <TextView
            android:id="@+id/tv_level_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/player_image_money_milestone"
            android:gravity="center"
            android:text="@string/level05"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_level_4"

            style="@style/txtListCauHoi"
            android:text="@string/level04" />

        <TextView
            android:id="@+id/tv_level_3"

            style="@style/txtListCauHoi"
            android:text="@string/level03" />

        <TextView
            android:id="@+id/tv_level_2"

            style="@style/txtListCauHoi"
            android:text="@string/level02" />

        <TextView
            android:id="@+id/tv_level_1"
            style="@style/txtListCauHoi"
            android:text="@string/level01" />

    </LinearLayout>
</com.example.ailatrieuphu_n10_project.layout.TienThuongLayout>